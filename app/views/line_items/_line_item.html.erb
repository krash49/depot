<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
 <tr>
<% end %>
   <td><%= line_item.quantity %> &times; </td>
   <td><%= line_item.product.title %></td>
   <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
   <td><%=  %></td>
   <td><%= button_to '+1', edit_quantity_line_item_path(line_item, change_quantity: 1), method: :patch %></td>
   <td><%= button_to '-1', edit_quantity_line_item_path(line_item, change_quantity: -1), method: :patch %></td>
   <td><%= button_to 'Delete position', line_item_path(line_item), method: :delete, remote: true,
           data: { confirm: 'Are you sure? '} %>
         </td>
 </tr>
